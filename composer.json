{
    "name"        : "vinorcola/dynamic-voter-bundle",
    "description" : "A bundle allowing to configure authorizations in config file.",
    "license"     : "MIT",
    "type"        : "symfony-bundle",
    "keywords"    : ["Symfony", "Security", "Voter", "Bundle"],

    "authors": [
        {
            "name"     : "Vinorcola",
            "email"    : "vinorcola@gmail.com",
            "homepage" : "https://github.com/vinorcola"
        }
    ],

    "require": {
        "php"                          : "^5.5||^7.0",
        "symfony/cache"                : "^3.2",
        "symfony/config"               : "^3.2",
        "symfony/dependency-injection" : "^3.2",
        "symfony/expression-language"  : "^3.2",
        "symfony/http-kernel"          : "^3.2",
        "symfony/security"             : "^3.2"
    },

    "require-dev" : {
        "phpunit/phpunit"        : "^4.7||^5.0",
        "symfony/phpunit-bridge" : "^3.2",
        "symfony/var-dumper"     : "^3.2"
    },

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "autoload": {
        "psr-4": {
            "Vinorcola\\DynamicVoterBundle\\" : "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Vinorcola\\DynamicVoterBundle\\" : "tests/"
        }
    },

    "archive": {
        "exclude": [ "/tests" ]
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
